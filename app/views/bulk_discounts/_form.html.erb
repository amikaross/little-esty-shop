<%= form_with url: path, method: method, local: true do |f| %>
  <%= f.label :discount, "Percentage Discount:" %><br>
  <%= f.text_field :discount, value: discount_value %><br><br>
  <%= f.label :threshold, "Quantity Threshold:" %><br>
  <%= f.text_field :threshold, value: threshold_value %><br><br>
  <%= f.submit "Submit" %>
<% end %>