<%= render partial: "shared/header", locals: { subtitle: @merchant.name } %>
<h3 style="text-align:center;background-color:whitesmoke;border-top-style:solid">My Discounts</h3>

<h2><%= link_to "Create New Bulk Discount", new_merchant_bulk_discount_path(@merchant) %></h2>
<% @merchant.bulk_discounts.each do |discount| %>
  <div id="bulk-discount-<%= discount.id %>">
    <h3><%= link_to "Bulk Discount ##{discount.id}", merchant_bulk_discount_path(@merchant, discount) %></h3>
    <p><%= "Quantity Threshold: #{discount.threshold} items" %></p>
    <p><%= "Percentage Discount: #{discount.discount}%" %></p>
    <p><%= button_to "Delete Discount", merchant_bulk_discount_path(@merchant, discount), method: :delete %></p>
  </div>
<% end %>

<h3>Upcoming Holidays:</h3>
<% @holidays.each do |holiday| %>
  <p><%= "#{holiday.name} - #{holiday.date}" %></p> 
<% end %>