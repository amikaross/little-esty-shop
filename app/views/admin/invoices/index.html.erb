<%= render partial: "admin_shared/header", locals: { subtitle: "Admin Dashboard" } %>

<h3 style="text-align:center;background-color:whitesmoke;border-top-style:solid">Invoices</h3>

<% @invoices.each do |invoice| %> 
  <div id="invoice-<%= invoice.id %>">
    <p><%= link_to "Invoice ##{invoice.id}", admin_invoice_path(invoice), style: "color:black;padding-left:3em" %></p>
  </div>
<% end %> 
